        },
        {
            "name": "Luxaris - Dashboard - Lint",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "lint"],
            "cwd": "${workspaceFolder}/luxaris-dashboard",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - Dashboard - Lint (Fix)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "lint:fix"],
            "cwd": "${workspaceFolder}/luxaris-dashboard",
            "console": "integratedTerminal",
