{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Luxaris - API - Run",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Run (Watch Mode)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Run Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["test"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Run Tests    (Watch Mode)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test:watch"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Run Tests (Coverage presented inside CLI)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test:coverage"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Run Tests (Coverage + Open HTML)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test:coverage:open"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Lint",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "lint"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API - Lint (create report file)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "lint:report"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },     
        {
            "name": "Luxaris - API - Lint (Fix)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "lint:fix"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },   
        {
            "name": "Luxaris - API - DB Migrate Up",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "migrate:up"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - API- DB Migrate Down",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "migrate:down"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
