# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=luxaris_user
DB_PASSWORD=luxaris_password
DB_NAME=luxaris_dev
DB_TEST_NAME=luxaris_test
DB_SCHEMA=luxaris

# Memcached Configuration
MEMCACHED_HOST=localhost
