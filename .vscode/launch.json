            "runtimeArgs": ["run", "migrate:reset:up"],
            "cwd": "${workspaceFolder}/luxaris-api",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Luxaris - Dashboard - Run Dev Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/luxaris-dashboard",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
