# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=luxaris_user
DB_PASSWORD=luxaris_password
DB_NAME=luxaris
DB_SCHEMA=luxaris

# Memcached Configuration
MEMCACHED_HOST=localhost
MEMCACHED_PORT=11211

# RabbitMQ Configuration
RABBITMQ_URL=amqp://luxaris_user:luxaris_password@localhost:5672/luxaris

# MongoDB Configuration
MONGODB_URL=mongodb://luxaris_user:luxaris_password@localhost:27017/luxaris?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=luxaris_user
MONGODB_PASSWORD=luxaris_password
MONGODB_DATABASE=luxaris

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USER=luxaris_user
REDIS_PASSWORD=luxaris_password
REDIS_DB=0

# Session Configuration
SESSION_TTL=86400

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# OAuth 2.0 - Google (User Authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# OAuth 2.0 - LinkedIn (Channel Connections)
# Client ID and Secret are configured via UI by platform admins
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/v1/channels/oauth/linkedin/callback

# OAuth 2.0 - X/Twitter (Channel Connections)
# Client ID and Secret are configured via UI by platform admins
X_REDIRECT_URI=http://localhost:3000/api/v1/channels/oauth/x/callback

# OAuth Credentials Encryption
# Used to encrypt OAuth client secrets stored in database
# Can reuse JWT_SECRET or set a separate key
OAUTH_CREDENTIALS_ENCRYPTION_KEY=

# Logging Configuration
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Security Configuration
# Allowed origins for CSRF protection (comma-separated)
# Leave empty to disable origin validation
# Example: https://luxaris.com,https://dashboard.luxaris.com,http://localhost:3000
ALLOWED_ORIGINS=
